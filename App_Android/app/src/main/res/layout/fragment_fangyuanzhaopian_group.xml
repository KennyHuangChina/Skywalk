<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:gravity="center"
    android:paddingLeft="@dimen/page_left_margin"
    android:paddingRight="@dimen/page_left_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="108dp">
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="160dp"
                android:layout_height="108dp"
                android:src="@drawable/huxingtu1"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:id="@+id/rl_pic_checkflag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50FFFFFF">
                <CheckBox
                    android:id="@+id/cb_pic_checkflag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/checkBoxStyle1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_pic_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorTextTint"
                android:text="照片说明：户型图一"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="108dp">
            <ImageView
                android:id="@+id/iv_pic1"
                android:layout_width="160dp"
                android:layout_height="108dp"
                android:src="@drawable/huxingtu2"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/rl_pic1_checkflag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90FFFFFF">
                <CheckBox
                    android:id="@+id/cb_pic1_checkflag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/checkBoxStyle1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_pic_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorTextTint"
                android:text="照片说明：户型图一"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

