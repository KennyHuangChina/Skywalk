<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundCommon"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.kjs.skywalk.app_android.Activity_PasswordReset">

    <TextView
        android:id="@+id/tv_info_title"
        android:onClick="onClickResponse"
        style="@style/textStyle_page_title"
        android:text="@string/password_reset"/>

    <include layout="@layout/seperator_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="49dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/background2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_telephone"/>
        <AutoCompleteTextView
            android:id="@+id/actv_telephone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="numberSigned"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/background2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_verification_code"/>
        <EditText
            android:id="@+id/et_verfication_code"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="numberSigned"
            android:maxLines="1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_get_verfication_code"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_marginEnd="14dp"
                android:layout_alignParentRight="true"
                style="@style/btnstyle_major"
                android:textSize="13sp"
                android:text="获取验证码"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/background2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_password"/>
        <EditText
            android:id="@+id/et_password_new"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="新密码"
            android:inputType="numberSigned"
            android:maxLines="1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:src="@drawable/icn_password_hide"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/background2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_password"/>
        <EditText
            android:id="@+id/et_password_confirm"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="numberSigned"
            android:maxLines="1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:src="@drawable/icn_password_hide"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="33dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_login"
            android:onClick="onClickResponse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/btnstyle_major"
            android:layout_centerInParent="true"
            android:text="登录"/>
    </RelativeLayout>

</LinearLayout>

