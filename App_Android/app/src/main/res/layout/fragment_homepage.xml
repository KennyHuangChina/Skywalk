<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--130px-->
        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="1080"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="43dp">

            <com.kjs.skywalk.control.TextView_DrawableRightCenter
                android:id="@+id/tv_location"
                android:text="@string/homepage_nanjing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/down_n"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:adjustViewBounds="true"
                android:textSize="14sp"
                android:layout_weight="203" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription=""
                android:background="#E5E5E5" />

            <!--textSize 42px-->
            <TextView
                android:id="@+id/textViewAdvancedSearch"
                android:layout_width="0dp"
                android:layout_weight="592"
                android:layout_height="30dp"
                android:text="@string/fragment_search_input_hint"
                android:textSize="14sp"
                android:textColor="#9c9ea5"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/search_n"
                android:paddingLeft="15dp"
                android:drawablePadding="5dp"
                android:onClick="onClickResponse"/>
            <EditText
                android:visibility="gone"
                android:id="@+id/editTextInputPassword"
                android:inputType="numberPassword"
                android:drawableStart="@drawable/search_n"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="592"
                android:textColorHint="#9c9ea5"
                android:textSize="14sp"
                android:hint="@string/homepage_input_hint"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="250" >
                <ImageView
                    android:contentDescription="@string/tab_menu_msg"
                    android:onClick="onClickResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/mesage2_n"
                    android:id="@+id/im_message" />
            </RelativeLayout>

        </LinearLayout>

        <!--540px-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription=""
            android:layout_below="@+id/ll_title"
            android:background="@drawable/homepage_title"
            android:onClick="onClickResponse"
            android:id="@+id/iv_title" />

        <!--260px-->
        <LinearLayout
            android:id="@+id/ll_entrance"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_below="@+id/iv_title">

            <TextView
                android:id="@+id/tv_rent"
                android:text="@string/homepage_chuzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:drawableTop="@drawable/house2_n"
                android:layout_weight="1"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:onClick="onClickResponse" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription=""
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/tv_apartment"
                android:text="@string/homepage_zufang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:drawableTop="@drawable/rent1_n"
                android:layout_weight="1"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:onClick="onClickResponse" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_seperator"
            android:layout_below="@+id/ll_entrance"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:contentDescription=""
            android:background="#E5E5E5" />

        <!--238px-->
        <com.kjs.skywalk.control.ListView_NoScroll
            android:id="@+id/lv_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/iv_seperator"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</ScrollView>