<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--130px-->
        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="1080"
            android:layout_height="43dp">

            <com.kjs.skywalk.app_android.TextView_DrawableRightCenter
                android:id="@+id/tv_location"
                android:text="@string/homepage_nanjing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/dropdown"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:adjustViewBounds="true"
                android:layout_weight="248" />

            <!--textSize 42px-->
            <EditText
                android:id="@+id/editTextInputPassword"
                android:inputType="numberPassword"
                android:drawableStart="@drawable/search"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="592"
                android:textColorHint="#9c9ea5"
                android:textSize="14sp"
                android:hint="@string/homepage_input_hint"
                />

            <ImageView
                android:contentDescription="@string/tab_menu_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/message"
                android:id="@+id/im_message"
                android:layout_weight="250" />
        </LinearLayout>

        <!--540px-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:contentDescription=""
            android:layout_below="@+id/ll_title"
            android:background="@drawable/homepage_title"
            android:id="@+id/iv_title" />
    </RelativeLayout>


</ScrollView>