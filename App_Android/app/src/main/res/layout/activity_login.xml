<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundCommon"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.kjs.skywalk.app_android.Activity_login"
    android:id="@+id/container">

    <TextView
        android:id="@+id/tv_info_title"
        android:onClick="onClickResponse"
        style="@style/textStyle_page_title"
        android:text="@string/action_sign_in"/>

    <include layout="@layout/seperator_horizontal"/>

    <ImageView
        android:id="@+id/iv_portrait_null"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/portrait1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical"
        android:background="@drawable/background1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <TextView
                android:id="@+id/tv_login_telephone"
                android:text="手机号码快捷登陆"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_login_title_background"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000"
                android:onClick="onLoginTitleClick" />
            <TextView
                android:id="@+id/tv_login_account"
                android:text="账号密码登陆"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_login_title_background"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000"
                android:onClick="onLoginTitleClick" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_telephone"/>
                <AutoCompleteTextView
                    android:id="@+id/actv_telephone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:inputType="numberSigned"
                    android:maxLines="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription=""
                android:background="#E5E5E5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_verification_code"/>
                <EditText
                    android:id="@+id/et_verfication_code"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:inputType="numberSigned"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/tv_get_verfication_code"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    style="@style/btnstyle_major"
                    android:textSize="13sp"
                    android:text="获取验证码"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_account"/>
                <AutoCompleteTextView
                    android:id="@+id/actv_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您的账号"
                    android:inputType="numberSigned"
                    android:maxLines="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription=""
                android:background="#E5E5E5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_password"/>
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:maxLines="1" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cb_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        style="@style/checkBoxPasswordStyle" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="37dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_login"
            android:onClick="onClickResponse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/btnstyle_major"
            android:layout_centerInParent="true"
            android:text="登录"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_register"
            android:onClick="onClickResponse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#2DB1FD"
            android:textSize="12sp"
            android:text="新用户注册"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription=""
            android:background="#000" />
        <TextView
            android:id="@+id/tv_forgot_pw"
            android:onClick="onClickResponse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#2DB1FD"
            android:textSize="12sp"
            android:text="忘记密码"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>


    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

