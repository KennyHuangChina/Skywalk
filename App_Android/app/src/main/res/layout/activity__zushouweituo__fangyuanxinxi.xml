<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rentals_expiration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"

    tools:context="com.kjs.skywalk.app_android.Activity_rentals_expiration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_info_title"
            style="@style/textStyle_page_title"
            android:text="租售委托-房源信息"/>

        <include layout="@layout/seperator_horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/page_left_margin"
            android:paddingRight="@dimen/page_right_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/fangyuan_s"
                android:text="房源"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_dash_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/jiage_n"
                android:text="价格"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/daili_n"
                android:text="代理"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/feiyong_n"
                android:text="费用"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/wancheng_n"
                android:text="完成"/>
        </LinearLayout>

        <include layout="@layout/seperator_horizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"  >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="小区名称"/>
                <EditText
                    style="@style/textStyle_page_blockValue"
                    android:textColorHint="@color/colorEditTextTint"
                    android:background="#FFFFFFFF"
                    android:hint="选择小区"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="楼栋号"/>
                <EditText
                    style="@style/textStyle_page_blockEdit"
                    android:textColorHint="@color/colorEditTextTint"
                    android:layout_toLeftOf="@+id/tv_unit"
                    android:hint="501"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="栋"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="楼层"/>
                <EditText
                    style="@style/textStyle_page_blockValue"
                    android:textColorHint="@color/colorEditTextTint"
                    android:background="#FFFFFFFF"
                    android:hint="4400元"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="门牌号"/>
                <EditText
                    style="@style/textStyle_page_blockValue"
                    android:textColorHint="@color/colorEditTextTint"
                    android:background="#FFFFFFFF"
                    android:hint="输入房号"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="产证面积"/>
                <EditText
                    style="@style/textStyle_page_blockValue"
                    android:textColorHint="@color/colorEditTextTint"
                    android:background="#FFFFFFFF"
                    android:hint="输入产证面积"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/page_left_margin"
                android:paddingRight="@dimen/page_right_margin"
                android:gravity="center_vertical" >
                <TextView
                    style="@style/textStyle_page_blockKey"
                    android:textColor="@color/colorTextNormal"
                    android:text="户型"/>
                <EditText
                    style="@style/textStyle_page_blockValue"
                    android:textColorHint="@color/colorEditTextTint"
                    android:background="#FFFFFFFF"
                    android:hint="请选择"/>
            </RelativeLayout>

            <include layout="@layout/seperator_horizontal"/>




        </LinearLayout>

    </LinearLayout>

</RelativeLayout>