<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kjs.skywalk.app_android.Activity_fangyuan_zhaopian">

    <TextView
        android:id="@+id/tv_info_title"
        android:onClick="onViewClick"
        style="@style/textStyle_page_title"
        android:text="房源照片"/>

    <include layout="@layout/seperator_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/page_left_margin"
                    android:paddingRight="@dimen/page_left_margin">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="13sp"
                        android:text="户型图"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/camera2_n"/>
                </RelativeLayout>

                <include layout="@layout/seperator_horizontal"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_huxing"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp">

                </android.support.v4.view.ViewPager>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_huxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </FrameLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <FrameLayout
                android:id="@+id/fl_fangjianjiegou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </FrameLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <FrameLayout
                android:id="@+id/fl_jiajuyongpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </FrameLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <FrameLayout
                android:id="@+id/fl_dianqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
