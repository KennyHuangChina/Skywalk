<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kjs.skywalk.app_android.Activity_fangyuan_zhaopian">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/page_left_margin"
        android:paddingRight="@dimen/page_right_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:paddingRight="20dp"
            android:gravity="center"
            android:src="@drawable/left_n"/>

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_back"
            android:layout_toLeftOf="@+id/tv_select"
            android:gravity="center"
            android:textColor="@color/colorTextNormal"
            android:textSize="17sp"
            android:text="房源照片"/>

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorTextNormal"
            android:textSize="17sp"
            android:text="选择"/>

    </RelativeLayout>

    <include layout="@layout/seperator_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/page_left_margin"
                    android:paddingRight="@dimen/page_left_margin">
                    <TextView
                        android:id="@+id/tv_name_picgroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="13sp"
                        android:text="户型图"/>
                    <TextView
                        android:id="@+id/tv_status_picgroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_name_picgroup1"
                        android:text="(6)"/>

                    <ImageView
                        android:id="@+id/iv_huxing_photopicker"
                        android:onClick="onPhotoPickerClicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/camera2_n"/>
                </RelativeLayout>

                <include layout="@layout/seperator_horizontal"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_huxing"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp">

                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/page_left_margin"
                    android:paddingRight="@dimen/page_left_margin">
                    <TextView
                        android:id="@+id/tv_name_picgroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="13sp"
                        android:text="房间结构"/>
                    <TextView
                        android:id="@+id/tv_status_picgroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_name_picgroup2"
                        android:text="(6)"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/camera2_n"/>
                </RelativeLayout>

                <include layout="@layout/seperator_horizontal"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_fangjianjiegou"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp">

                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/page_left_margin"
                    android:paddingRight="@dimen/page_left_margin">
                    <TextView
                        android:id="@+id/tv_name_picgroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="13sp"
                        android:text="家居用品"/>
                    <TextView
                        android:id="@+id/tv_status_picgroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_name_picgroup3"
                        android:text="(6)"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/camera2_n"/>
                </RelativeLayout>

                <include layout="@layout/seperator_horizontal"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_jiajuyongpin"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp">

                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <include layout="@layout/seperator_horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="@dimen/page_left_margin"
                    android:paddingRight="@dimen/page_left_margin">
                    <TextView
                        android:id="@+id/tv_name_picgroup4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="13sp"
                        android:text="电器"/>
                    <TextView
                        android:id="@+id/tv_status_picgroup4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_name_picgroup4"
                        android:text="(6)"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/camera2_n"/>
                </RelativeLayout>

                <include layout="@layout/seperator_horizontal"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_dianqi"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp">

                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#E5E5E5">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="45dp"
                    android:onClick="onViewClick"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_rect_background_green"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="上传房源照片">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
