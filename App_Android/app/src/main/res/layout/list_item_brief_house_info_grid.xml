<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription=""
            android:maxWidth="1920dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/iv_apartment_thumb" />

        <ImageView
            android:id="@+id/imageViewFlag"
            android:background="@drawable/house_checked1_n"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_alignLeft="@+id/iv_apartment_thumb"
            android:layout_alignTop="@+id/iv_apartment_thumb"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/iv_apartment_thumb"
        android:layout_alignBottom="@+id/iv_apartment_thumb"
        android:layout_toRightOf="@+id/iv_apartment_thumb">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPropertyName"
                    style="@style/TextView_apartment_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorTextNormal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textViewBriefInfo"
                    style="@style/TextView_apartment_name"
                    android:text="三室两厅 88m 3/5F"
                    android:textColor="@color/colorText"
                    android:textSize="11sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textViewPrice"
                        android:textSize="10sp"
                        android:gravity="bottom"
                        android:textColor="#ff3d19" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:id="@+id/textViewPropertyFee"
                        android:textColor="@color/colorTextNormal"
                        android:layout_marginLeft="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:gravity="center_vertical">
        <TextView
            android:text="靠近小学"
            android:id="@+id/tv_content_category1"
            style="@style/TextView_Kaojinxiaoxue" />
        <TextView
            android:text="电梯房"
            android:id="@+id/tv_content_category2"
            style="@style/TextView_diantifang"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:text="无贷款"
            android:id="@+id/tv_content_category3"
            style="@style/TextView_daikuan"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>