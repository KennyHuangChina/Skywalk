<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rentals_expiration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"

    tools:context="com.kjs.skywalk.app_android.Activity_fangyuan_renzhengshuoming">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#efefef"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:onClick="onViewClick"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:background="@drawable/rounded_rect_background_green"
            android:text="开始认证"
            android:id="@+id/textViewCommit" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout">
        <TextView
            android:id="@+id/tv_info_title"
            style="@style/textStyle_page_title"
            android:text="房源认证"/>

        <include layout="@layout/seperator_horizontal"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认证房源享特权"
                        android:textSize="15sp"
                        android:textColor="#00ae63"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/safety2_n"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="点亮认证标签，买家看房更放心"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextNormal"/>
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/medal_n"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:paddingLeft="40dp"
                        android:text="房源排名更靠前，看房买家增加一倍"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNormal"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="148dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/certification_n"
                            android:text="上传产证" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/right2_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/id_card_n"
                            android:text="上传身份" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/right2_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/list2_n"
                            android:text="审核通过" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/right2_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/safety1_n"
                            android:text="完成认证" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="提示：完成认证后，房源信息将与产证信息保持一致"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:paddingLeft="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我们承诺"
                        android:textSize="15sp"
                        android:textColor="#00ae63"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/diamond_n"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="产证信息仅用于审核，任何人都无法查看"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNormal"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="示例"
                        android:textSize="15sp"
                        android:textColor="#00ae63"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingRight="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:drawableLeft="@drawable/close3_n"
                            android:drawablePadding="2dp"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="内页展开，信息清晰"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextNormal"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:src="@drawable/ren"
                            android:paddingLeft="15dp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="7dp"
                        android:paddingBottom="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:drawableLeft="@drawable/close3_n"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="内容模糊，信息展示不全"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextNormal"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:src="@drawable/ren"
                            android:paddingRight="15dp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>