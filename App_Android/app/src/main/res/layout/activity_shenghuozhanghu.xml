<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rentals_expiration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"

    tools:context="com.kjs.skywalk.app_android.Activity_Shenghuozhanghu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout">
        <TextView
            android:id="@+id/tv_info_title"
            style="@style/textStyle_page_title"
            android:text="生活账户"/>

        <include layout="@layout/seperator_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dfdfdf"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/textViewGardenName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorTextNormal"
                android:text="世茂蝶湖湾 175栋501室"
                android:paddingLeft="15dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="水表"
                        android:textSize="14sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/colorTextNormal"
                        android:drawableLeft="@drawable/water_n"
                        />
                    <TextView
                        android:id="@+id/textViewWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未填写"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextNormal"
                        android:onClick="onClickResponse"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="电表"
                        android:textSize="14sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/colorTextNormal"
                        android:drawableLeft="@drawable/power_n"
                        />
                    <TextView
                        android:id="@+id/textViewPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未填写"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextNormal"
                        android:onClick="onClickResponse"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="燃气"
                        android:textSize="14sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/colorTextNormal"
                        android:drawableLeft="@drawable/gas2_n"
                        />
                    <TextView
                        android:id="@+id/textViewGas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未填写"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextNormal"
                        android:onClick="onClickResponse"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="有线电视"
                        android:textSize="14sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/colorTextNormal"
                        android:drawableLeft="@drawable/tv2_n"
                        />
                    <TextView
                        android:id="@+id/textViewCable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未填写"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextNormal"
                        android:onClick="onClickResponse"/>
                </RelativeLayout>
                <include layout="@layout/seperator_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="网络宽带"
                        android:textSize="14sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/colorTextNormal"
                        android:drawableLeft="@drawable/network_n"
                        />
                    <TextView
                        android:id="@+id/textViewNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未填写"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextNormal"
                        android:onClick="onClickResponse"/>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</RelativeLayout>