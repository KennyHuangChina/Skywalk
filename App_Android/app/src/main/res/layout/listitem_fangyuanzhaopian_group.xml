<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_picgroup_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/page_left_margin"
        android:paddingRight="@dimen/page_left_margin">
        <TextView
            android:id="@+id/tv_picgroup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/colorTextNormal"
            android:textSize="13sp"
            android:text="户型图"/>
        <TextView
            android:id="@+id/tv_picgroup_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_picgroup_name"
            android:text="(6)"/>

        <ImageView
            android:id="@+id/iv_picgroup_photopicker"
            android:onClick="onPhotoPickerClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/camera2_n"/>
    </RelativeLayout>

    <include layout="@layout/seperator_horizontal"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pic_list"
        android:layout_width="wrap_content"
        android:layout_height="155dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>
