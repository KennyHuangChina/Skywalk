<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <include layout="@layout/seperator_horizontal" />

        <TextView
            android:text="不限"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:textSize="14sp"
            android:textColor="#41a766"
            android:id="@+id/textViewNoLimit" />

        <include layout="@layout/seperator_horizontal" />

        <TextView
            android:text="100万以下"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/textViewPrice1" />

        <include layout="@layout/seperator_horizontal" />

        <TextView
            android:text="100-150万"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/textViewPrice2" />

        <include layout="@layout/seperator_horizontal" />

        <TextView
            android:text="150-200万"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/textViewPrice3" />

        <include layout="@layout/seperator_horizontal" />

        <TextView
            android:text="200-300万"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/textViewPrice4" />

        <include layout="@layout/seperator_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#efefef"
            android:layout_height="50dp">

            <TextView
                android:text="自定义"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:paddingLeft="17dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="30"
                android:id="@+id/textViewUserDefine" />

            <EditText
                android:layout_width="92dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="最低"
                android:textSize="14sp"
                android:background="#ffffff"
                android:id="@+id/editText"
                android:layout_weight="92"/>

            <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/textViewCharacter"
                android:layout_weight="10"/>

            <EditText
                android:layout_width="92dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="最高"
                android:textSize="14sp"
                android:id="@+id/editText2"
                android:background="#ffffff"
                android:layout_weight="92"/>

            <Button
                android:text="确定"
                android:layout_width="75dp"
                android:layout_height="33dp"
                android:background="#41a766"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:id="@+id/button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:layout_weight="33"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>