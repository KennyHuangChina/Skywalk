<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:padding="15dp">
    <ImageView
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:contentDescription=""
        android:src="@drawable/sample1"
        android:scaleType="fitXY"
        android:id="@+id/iv_apartment_thumb"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewFlag"
        android:background="@drawable/house_checked_n"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_alignLeft="@+id/iv_apartment_thumb"
        android:layout_alignTop="@+id/iv_apartment_thumb"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/iv_apartment_thumb"
        android:layout_alignBottom="@+id/iv_apartment_thumb"
        android:layout_toRightOf="@+id/iv_apartment_thumb"
        android:layout_marginLeft="13dp">

        <TextView
            android:id="@+id/textViewPropertyName"
            style="@style/TextView_apartment_name"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textViewBriefInfo"
            style="@style/TextView_apartment_description"
            android:text="3室2厅 88 m² 3/5F"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <!--158x52px-->
            <TextView
                android:text=""
                android:id="@+id/textViewTag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text=""
                android:id="@+id/textViewTag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:text=""
                android:id="@+id/textViewTag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textViewPrice"
                android:textSize="10sp"
                android:gravity="bottom"
                android:textColor="#ff3d19" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/textViewPrice"
                android:id="@+id/textViewPropertyFee"
                android:textSize="10sp"
                android:gravity="bottom"
                android:textColor="#ff3d19" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>