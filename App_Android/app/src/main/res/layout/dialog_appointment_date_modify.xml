<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rect_background_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="预约改期"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="#585858"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/schedule_icon"
            android:gravity="center"/>
    </RelativeLayout>


    <include layout="@layout/seperator_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/page_left_margin"
        android:paddingRight="@dimen/page_right_margin"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date_selector"
                    android:enabled="false"
                    android:layout_width="139dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_rect_background_gray"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/down2_n"
                    android:paddingRight="15dp"
                    android:text="2017-03-03"/>
                <ImageView
                    android:tag="null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/sp_timeselector"
                    android:layout_width="139dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_rect_background_gray"
                    android:gravity="center"
                    android:entries="@array/time_selector" >
                </Spinner>

                <!--<TextView-->
                    <!--android:layout_width="139dp"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:background="@drawable/rounded_rect_background_gray"-->
                    <!--android:gravity="center"-->
                    <!--android:text="9:00 - 9:30"/>-->
            </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="@dimen/page_left_margin"
        android:layout_marginRight="@dimen/page_right_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:hint="请输入相关说明"
        android:textColorHint="@color/colorTextTint1"
        android:textSize="12sp"
        android:gravity="left|top"
        android:paddingTop="10dp"
        android:ems="10"
        android:background="@drawable/shape_rect_with_edge"
        android:inputType="text" />

    <include layout="@layout/seperator_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center">

        <TextView
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_back"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:background="#EFEFEF" />

        <TextView
            android:text="提交"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirm"
            android:textColor="#00AF60"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>