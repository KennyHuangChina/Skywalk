<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="一房"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="14sp"
        android:textColor="#41a766"
        android:id="@+id/textViewNoLimit" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="两房"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/textViewPrice1" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="三房"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/textViewPrice2" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="四房"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/textViewPrice3" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="五房及以上"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/textViewPrice4" />

    <include layout="@layout/seperator_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">
        <Button
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#41a766"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:id="@+id/button"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp" />
    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>