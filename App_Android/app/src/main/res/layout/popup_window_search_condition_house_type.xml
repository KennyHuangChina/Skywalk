<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="一房"
        style="@style/text_view_search_condition_house_type_item"
        android:id="@+id/textViewHouseType1" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="两房"
        style="@style/text_view_search_condition_house_type_item"
        android:id="@+id/textViewHouseType2" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="三房"
        style="@style/text_view_search_condition_house_type_item"
        android:id="@+id/textViewHouseType3" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="四房"
        style="@style/text_view_search_condition_house_type_item"
        android:id="@+id/textViewHouseType4" />

    <include layout="@layout/seperator_horizontal" />

    <TextView
        android:text="五房及以上"
        style="@style/text_view_search_condition_house_type_item"
        android:id="@+id/textViewHouseType5" />

    <include layout="@layout/seperator_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">
        <Button
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#41a766"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:id="@+id/buttonOK"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp" />
    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>