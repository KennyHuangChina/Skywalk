<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/seperator_horizontal"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ace3c8"
            android:textSize="15sp"
            android:textColor="#00ae63"
            android:gravity="center"
            android:text="@string/button_text_restore_default"
            android:id="@+id/textViewButtonDefault"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#27bf82"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/button_text_ok"
            android:id="@+id/textViewButtonOK"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >
                    <TextView
                        android:text="房源标签"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_search_condition_filter_title"
                        android:textColor="@android:color/black"
                        android:paddingLeft="14dp"
                        android:gravity="center_vertical"
                        android:id="@+id/textViewTitleSourceTag" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="21"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp">
                    <TextView
                        android:text="上门实勘"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="满五唯一"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="满两年"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="南北通透"
                        style="@style/text_view_search_condition_filter_item" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="21">
                    <TextView
                        android:text="无贷款"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="电梯房"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="靠近学校"
                        style="@style/text_view_search_condition_filter_item" />
                    <TextView
                        android:text="靠近地铁"
                        style="@style/text_view_search_condition_filter_item" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="21"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="8dp"
                    android:weightSum="4">
                    <TextView
                        android:text="今日可看"
                        style="@style/text_view_search_condition_filter_item" />

                    <TextView
                        android:text=""
                        style="@style/text_view_search_condition_filter_item"
                        android:visibility="invisible"/>
                    <TextView
                        android:text=""
                        style="@style/text_view_search_condition_filter_item"
                        android:visibility="invisible"/>
                    <TextView
                        android:text=""
                        style="@style/text_view_search_condition_filter_item"
                        android:visibility="invisible"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:contentDescription=""
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#E5E5E5" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>