<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kjs.skywalk.app_android.Message.Activity_Message_fangyuanshenhe">

    <TextView
        android:id="@+id/tv_info_title"
        android:onClick="onViewClick"
        style="@style/textStyle_page_title"
        android:textColor="@color/colorFontSelected"
        android:text="新房源已提交"/>

    <include layout="@layout/seperator_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="11dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tv_house_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="21dp"
                android:paddingLeft="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/detail_button"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:textColor="#C1C1C1"
            android:textSize="11sp"
            android:text="-------------- 历史记录 --------------"/>

        <ListView
            android:id="@+id/lv_history"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </ListView>


        <include layout="@layout/seperator_horizontal"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="22dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="#4C4C4C"
            android:text="提交新房源"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_button1"
                android:onClick="onClickResponse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/rounded_rect_background_2db1fd"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:text="button1"/>

            <TextView
                android:id="@+id/tv_button2"
                android:onClick="onClickResponse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/rounded_rect_background_green"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="button2"/>

            <TextView
                android:id="@+id/tv_button3"
                android:onClick="onClickResponse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/rounded_rect_background_green"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="button3"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/ll_bottom"
            android:contentDescription=""
            android:background="#E5E5E5" />
    </RelativeLayout>

</LinearLayout>
