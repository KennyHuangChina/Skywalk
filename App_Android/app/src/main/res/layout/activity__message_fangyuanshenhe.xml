<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kjs.skywalk.app_android.Message.Activity_Message_fangyuanshenhe">

    <TextView
        android:id="@+id/tv_info_title"
        android:onClick="onViewClick"
        style="@style/textStyle_page_title"
        android:textColor="@color/colorFontSelected"
        android:text="新房源已提交"/>

    <include layout="@layout/seperator_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="11dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="13sp"
                android:text="世贸蝶湖湾 180 栋 1805 室"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="21dp"
                android:paddingLeft="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/detail_button"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:textColor="#C1C1C1"
            android:textSize="11sp"
            android:text="-------------- 历史记录 --------------"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="21dp"
                android:src="@drawable/touxiang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_touxiang"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="#4C4C4C"
                android:text="客人： 张先生"/>

            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="196dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tel_n"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_tel"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:text="15822203313"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="#B3B3B3"
                android:textSize="9sp"
                android:text="2017-9-3  14:22"/>

        </RelativeLayout>
        
        <include layout="@layout/seperator_horizontal"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="22dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="#4C4C4C"
            android:text="提交新房源"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_grant_others"
                android:onClick="onClickResponse"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/rounded_rect_background_2db1fd"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="委托他人审核"/>

            <TextView
                android:id="@+id/tv_check_new_house"
                android:onClick="onClickResponse"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/rounded_rect_background_green"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="审核新房源"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/ll_bottom"
            android:contentDescription=""
            android:background="#E5E5E5" />
    </RelativeLayout>

</LinearLayout>
