<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kjs.skywalk.app_android.Apartment.Activity_ApartmentDetail"
    tools:showIn="@layout/activity__apartment_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.kjs.skywalk.control.SliderView
            android:id="@+id/sv_view"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </com.kjs.skywalk.control.SliderView>

        <LinearLayout
            android:id="@+id/ll_apartment_base_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp">

            <TextView
                android:text="紫金华府175栋1505室"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/tv_apartment_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp">

                <TextView
                    android:text="房屋编号： NO.12345"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#939499"
                    android:id="@+id/tv_apartment_no" />

                <TextView
                    android:text="最后更新： 2016-11-16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_apartment_no"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="#939499"
                    android:id="@+id/tv_apartment_update_date" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp">
            <TextView
                android:text="满五唯一"
                android:layout_height="20dp"
                style="@style/tv_apartment_cg1" />

            <TextView
                android:text="上门实勘"
                android:layout_height="20dp"
                style="@style/tv_apartment_cg2"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="靠近地铁"
                android:layout_height="20dp"
                style="@style/tv_apartment_cg3"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="电梯房"
                android:layout_height="20dp"
                style="@style/tv_apartment_cg4"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="无贷款"
                android:layout_height="20dp"
                style="@style/tv_apartment_cg5"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <include layout="@layout/seperator_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="11dp"
            android:paddingRight="11dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="业主挂牌价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#939499"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_price_analysis"
                    android:onClick="onViewClick"
                    android:text="价格分析 ^"
                    android:textColor="#00AE63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <com.kjs.skywalk.control.ExpandedView
                android:id="@+id/ev_price_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </com.kjs.skywalk.control.ExpandedView>
        </LinearLayout>

        <include layout="@layout/seperator_horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="3室1厅"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF3F29"
                    android:textSize="14sp"/>

                <TextView
                    android:text="户型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#939499"
                    android:textSize="12sp"/>
            </LinearLayout>


        </LinearLayout>


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/text_margin"-->
            <!--android:text="@string/large_text"/>-->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
