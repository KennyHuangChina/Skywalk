<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <!--130px-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp" >

        <TextView
            android:text="今日推荐"
            style="@style/TextView_section_title"
            android:id="@+id/tv_info_title"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="查看全部1234套 "
            style="@style/TextView_section_title_all"
            android:id="@+id/tv_info_all"
            android:layout_alignBaseline="@+id/tv_info_title"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include layout="@layout/seperator_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include layout="@layout/list_item_brief_house_info_v" />
        <include layout="@layout/list_item_brief_house_info_v" />
    </LinearLayout>

</LinearLayout>
