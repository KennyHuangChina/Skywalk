<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context="com.kjs.skywalk.app_android.Activity_rentals_jiaofang_chaobiao"
    android:id="@+id/root_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onViewClick"
            android:drawableLeft="@drawable/nav_back"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="出租进度-交房"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:layout_alignParentStart="true">
        </TextView>

        <include layout="@layout/seperator_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_apartment_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onViewClick"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="世茂蝶湖湾 175栋3212室"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </TextView>

        <include layout="@layout/seperator_horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:onClick="onViewClick"
            android:gravity="center"
            android:text="房屋交付时，各项生活用表读数如下">
        </TextView>
        <TextView
            android:id="@+id/textViewWater"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onViewClick"
            android:drawableLeft="@drawable/dropdown"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="水表"
            android:paddingLeft="15dp"
            android:layout_alignParentStart="true">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rect_with_edge">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="吨"
                    android:gravity="center_vertical|right"
                    android:layout_weight="10"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewElectric"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onViewClick"
            android:drawableLeft="@drawable/dropdown"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="电表"
            android:paddingLeft="15dp"
            android:layout_alignParentStart="true">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayoutInfo1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rect_with_edge">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="峰"
                    android:gravity="center_vertical|left"
                    android:layout_weight="10"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="度(千瓦时)"
                    android:gravity="center_vertical|right"
                    android:layout_weight="30"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutInfo2"
                android:layout_below="@+id/linearLayoutInfo1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rect_with_edge">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="谷"
                    android:gravity="center_vertical|left"
                    android:layout_weight="10"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="度(千瓦时)"
                    android:gravity="center_vertical|right"
                    android:layout_weight="30"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewGas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onViewClick"
            android:drawableLeft="@drawable/dropdown"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="煤气"
            android:paddingLeft="15dp"
            android:layout_alignParentStart="true">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rect_with_edge">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="立方"
                    android:gravity="center_vertical|right"
                    android:layout_weight="10"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="onViewClick"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_rect_background_green"
        android:text="确定">
    </TextView>
</RelativeLayout>