<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--今日推荐-->
    <style name="TextView_section_title" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#394142</item>
    </style>

    <!--查看全部1234套-->
    <style name="TextView_section_title_all" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#979aa1</item>
    </style>

    <!--证大大拇指广场-->
    <style name="TextView_apartment_name" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#242224</item>
    </style>

    <!--姑苏白杨湾街道 / 3室2厅 / 88 m²-->
    <style name="TextView_apartment_description" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#939499</item>
    </style>

    <!--随时看房-->
    <style name="TextView_cg1" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/homepage_cg1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#27bf82</item>
    </style>

    <!--满2年-->
    <style name="TextView_cg2" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/homepage_cg2</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#5aaaaf</item>
    </style>

    <!--150万-->
    <style name="TextView_cost" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff3d19</item>
    </style>

    <!--25437元/平-->
    <style name="TextView_unitcost" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#939499</item>
    </style>

    <!--世贸蝶湖湾175栋2202室-->
    <style name="textstyle_large" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#242224</item>
    </style>
    <style name="textstyle_small" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#242224</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
